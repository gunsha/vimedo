<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.solic_medicoperfil"
    android:orientation="vertical"
    android:weightSum="1">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_0E"
        android:layout_marginBottom="284dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="María López"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/font_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/med_nombre"
            android:layout_marginTop="61dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            app:srcCompat="@drawable/userfemale"
            android:id="@+id/med_perfil"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/med_nombre"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Calificaciones:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/med_calif"
            android:textAlignment="center"
            android:layout_alignBottom="@+id/med_perfil"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"/>

        <RatingBar
            android:id="@+id/med_califaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:progressTint="@color/vimedo_orange"
            android:progressBackgroundTint="@android:color/darker_gray"
            android:secondaryProgressTint="@android:color/darker_gray"
            android:layout_alignTop="@+id/med_calif"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Doctora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/med_especializacion"
            android:layout_marginTop="101dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="279dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Médica Clínica (Fac. Medicina, UBA)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:textSize="15sp"
            android:layout_marginTop="32dp"
            android:id="@+id/med_ubicacion" />

        <Button
            android:id="@+id/perfil_volver"
            android:text="@string/btn_perfil_volver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:background="@drawable/circlebutton"
            android:gravity="center"
            android:layout_marginBottom="22dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginRight="100dp"
            android:layout_marginLeft="100dp" />


    </RelativeLayout>

</RelativeLayout>
