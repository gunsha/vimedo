<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/userpc"
        android:layout_marginTop="104dp"
        android:id="@+id/pac_perfil"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:text="Juan Gonzalez"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pac_perfil"
        android:layout_centerHorizontal="true"
        android:id="@+id/pac_nombre" />

    <TextView
        android:text="Paciente"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="@color/gray_0A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pac_nombre"
        android:layout_centerHorizontal="true"
        android:id="@+id/pac_paciente" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/pac_paciente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"></LinearLayout>
</RelativeLayout>